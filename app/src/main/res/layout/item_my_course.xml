<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Course Info Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/courseTitleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Python Basics"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/courseInstructorText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Instructor: John Doe"
                        android:textSize="14sp"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:id="@+id/courseLevelText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Level: Beginner"
                        android:textSize="14sp"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:id="@+id/courseDurationText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Duration: 6 weeks"
                        android:textSize="14sp"
                        android:layout_marginTop="2dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Syllabus Topic Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <!-- Checkbox -->
                    <CheckBox
                        android:id="@+id/completedCheckbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/syllabusTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Syllabus Topic Title"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:layout_marginBottom="8dp" />

                        <!-- Buttons in a horizontal row -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <Button
                                android:id="@+id/watchVideoButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Watch Video"
                                android:layout_marginEnd="8dp"
                                android:backgroundTint="#4CAF50"
                                android:textColor="#FFFFFF"
                                android:textSize="14sp" />

                            <Button
                                android:id="@+id/downloadPdfButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Download PDF"
                                android:backgroundTint="#2196F3"
                                android:textColor="#FFFFFF"
                                android:textSize="14sp" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
